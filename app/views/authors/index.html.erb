<h1>Listing authors</h1>

<table id="table_id" class="tablesorter" border="1">
  <thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Show</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
</thead>

<tbody>
<% @authors.each do |author| %>
  <tr>
    <td><%= author.name %></td>
    <td><%= author.email %></td>
    <td><%= link_to image_tag("show.png", title: "Show"), author %></td>
    <td><%= link_to image_tag("edit.png", title: "Edit"), edit_author_path(author) %></td>
    <td><%= link_to image_tag("delete.png", title: "Delete"), author, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</tbody>
</table>

<br />

<%= link_to 'New Author', new_author_path %>
