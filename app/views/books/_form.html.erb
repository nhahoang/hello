      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
     <%= f.label "Picture" %><br />
      <%= f.file_field :pic %>
  </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :year %><br />
    <%= f.text_field :year %>
  </div>
  <div class="field">
    <%= f.label :category_id %><br />
    <%= f.select :category_id, options_for_select(Category.all.collect{|c| [c.name, c.id]})%>
  </div>
  <div class="field">
    <%= f.label :author_id %><br />
    <%= f.select :author_id, options_for_select(Author.all.collect{|a| [a.name, a.id]}) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
